<h2 align="center">"Your Board:"<%= @board.title %> </h2>

<div align="center"><%= link_to "Create a New Ticket", new_ticket_path, class: "btn btn-success" %></div>


<div class="row" align="center">
  <br><br><br>
  <div class="col-md-2"></div>
  <div class="col-md-2">
    <table class="table table-striped table-bordered">
      <caption class="text-center">Backlog</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
          </tr>
        </thead>
      <tbody>
        <% backlog_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <table class="table table-striped table-bordered">
      <caption class="text-center">Current Sprint</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
          </tr>
        </thead>
      <tbody>
        <% sprint_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <table class="table table-striped table-bordered">
      <caption class="text-center">In Progress</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
          </tr>
        </thead>
      <tbody>
        <% in_progress_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <table class="table table-striped table-bordered">
      <caption class="text-center">Done</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
          </tr>
        </thead>
      <tbody>
        <% done_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

