<h2 align="center">Your Board: <%= @board.title %> </h2>
<br><br>
<div align="center"><%= link_to "Create a New Ticket", new_ticket_path, class: "btn btn-success" %></div>

<div class="row container-fluid" align="center">
  <br><br><br>
  <div class="col-md-3">
    <table class="table table-striped table-bordered">
      <caption class="text-center">Backlog</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
            <th class="text-center">Modify</th>
          </tr>
        </thead>
      <tbody>
        <% backlog_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
            <td class="text-center"><%= link_to "Current Sprint", ticket_path(ticket_id: ticket.id, status: "Current Sprint"), method: "put", class: "btn-sm btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <table class="table table-striped table-bordered">
      <caption class="text-center">Current Sprint</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
            <th class="text-center">Modify</th>
          </tr>
        </thead>
      <tbody>
        <% sprint_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
            <td class="text-center"><%= link_to "In Progress", ticket_path(ticket_id: ticket.id, status: "In Progress"), method: "put", class: "btn-sm btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <table class="table table-striped table-bordered">
      <caption class="text-center">In Progress</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
            <th class="text-center">Modify</th>
          </tr>
        </thead>
      <tbody>
        <% in_progress_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
            <td class="text-center"><%= link_to "Done", ticket_path(ticket_id: ticket.id, status: "Done"), method: "put", class: "btn-sm btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <table class="table table-striped table-bordered">
      <caption class="text-center">Done</caption>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
          </tr>
        </thead>
      <tbody>
        <% done_tickets.each do |ticket| %>
          <tr>
            <td class="text-center"><%= ticket.title %></td>
            <td class="text-center"><%= ticket.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

