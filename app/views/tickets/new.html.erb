<div align="center">
<h2> Create a New Ticket </h2>
<br><br>

<div class="col-md-4 col-md-offset-4">
<%= bootstrap_form_for(@ticket) do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :description %>
  <%= f.select :status, ["Backlog", "Current Sprint", "In Progress"], { label: "Choose a Status" }, { class: "selectpicker" } %>
  <%= f.submit "Create!" %>
<% end %>
</div>
</div>
